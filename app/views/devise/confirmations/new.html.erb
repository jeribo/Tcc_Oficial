<h1><%= t(".title") %></h1>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= render "devise/shared/errors" %>
  <div>
  	<%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div> 
  	<%= f.submit t(".submit") %> 
  </div>
<% end %>

<%= render "devise/shared/links" %>
